{
  "name": "@tronweb3/tronwallet-adapter-ledger",
  "version": "1.1.8",
  "description": "Wallet adapter for the Ledger wallet.",
  "keywords": [
    "TRON",
    "TronWeb",
    "Ledger"
  ],
  "author": "tronprotocol",
  "repository": {
    "type": "git",
    "url": "https://github.com/tronprotocol/tronwallet-adapter"
  },
  "license": "MIT",
  "type": "module",
  "sideEffects": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js",
    "types": "./lib/types/index.d.ts"
  },
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ledgerhq/hw-app-trx": "^6.27.8",
    "@ledgerhq/hw-transport": "6.27.1",
    "@ledgerhq/hw-transport-webhid": "6.27.1",
    "buffer": "^6.0.3",
    "eventemitter3": "^4.0.0",
    "preact": "^10.11.3",
    "@tronweb3/tronwallet-abstract-adapter": "^1.1.6"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.20.0",
    "jest-environment-jsdom": "^29.3.1",
    "shx": "^0.3.4"
  },
  "scripts": {
    "clean": "shx mkdir -p lib && shx rm -rf lib",
    "package": "shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
    "test": "jest",
    "build:umd": "node ../../../scripts/build-umd.js"
  }
}